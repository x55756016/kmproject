@{
    Layout = null;
}

<!DOCTYPE html>
<html id="ng-app" ng-app="loginApp">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>用户中心</title>
    @System.Web.Optimization.Styles.Render("~/Content/css")
    @System.Web.Optimization.Scripts.Render("~/Script/bootstrap")
    <link rel="stylesheet" href="/Content/jquery.bxslider.css" />
    <style type="text/css">
       
        body {
            background: url('/Content/images/bg.jpg') top center no-repeat;
            background-size: cover;
        }

        .login-panel {
            margin-top: 15%;
        }

        a.forget {
            float: right;
            cursor: pointer;
            text-decoration: none;
        }

        .divider {
            border-right: solid 1px #f8f8f8;
        }

        label.title {
            text-align: right;
            vertical-align: middle;
            line-height: 40px;
        }

        .loading-modal {
            position: fixed;
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
            z-index: 1051;
            background: rgba(0,0,0,0.3);
            overflow: hidden;
        }

        .loading {
            position: absolute;
            top: 50%;
            background: white;
            border-radius: 8px;
            width: 160px;
            height: 72px;
            left: 50%;
            margin-top: -36px;
            margin-left: -80px;
            text-align: center;
            background: #555;
            color: #fff;
        }

            .loading img {
                margin-top: 12px;
                text-align: center;
                width: 30px;
                height: 30px;
            }

            .loading span {
                display: block;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-10  col-md-offset-1 ">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="text-center">康美健康云肿瘤全程管理平台</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row" ng-view>
                        </div>
                    </div>
                    <div class="panel-info">
                        <div class="text-center">
                            <h5>康美健康云&copy;2016用户协议隐私政策</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/Scripts/jquery-2.1.4.min.js"></script>
    @System.Web.Optimization.Scripts.Render("~/Script/angular")
    <script src="/Scripts/jquery.bxslider.js"></script>
    <script src="/AppScripts/User/main.js"></script>
</body>
</html>
